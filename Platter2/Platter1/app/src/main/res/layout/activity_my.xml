<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@drawable/round_blue"/>

    <cn.enjoytoday.shadow.ShadowLayout
        android:id="@+id/shadowlayout"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="85dp"
        app:shadowRadius="10dp"
        app:shadowColor="#A3A4A5"
        app:blurRadius="2dp"
        app:xOffset="3dp"
        app:yOffset="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@drawable/man"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_toRightOf="@+id/iv"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="35dp"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="霍源浩"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_school"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="" />
            </RelativeLayout>

        </RelativeLayout>

    </cn.enjoytoday.shadow.ShadowLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/shadowlayout"
        android:layout_marginTop="25dp">
        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:background="@drawable/water">
            <ImageView
                android:id="@+id/iv_sign_in"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/party"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="拼屏派对"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@+id/iv_sign_in"
                android:textSize="16sp"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:layout_below="@+id/rl_2"
            android:background="@drawable/water">
            <ImageView
                android:id="@+id/iv_leave"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/record"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="历史记录"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@+id/iv_leave"
                android:textSize="16sp"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:layout_below="@id/rl_3"
            android:background="@drawable/water">
            <ImageView
                android:id="@+id/iv_about"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/about"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="关于"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@+id/iv_about"
                android:textSize="16sp"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:layout_below="@id/rl_4"
            android:background="@drawable/water">
            <ImageView
                android:id="@+id/iv_exit"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/exit"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/exit_login"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="退出登录"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@+id/iv_exit"
                android:textSize="16sp"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>